<div class="py-15 lg:py-30" style="background-color: {{ block.background_color }};">
	<div class="container">
		<div class="row gap-y-20">
			{% for key_figure in block.key_figures %}
				<article class="{{ html_classes( 'lg:col-5/12', loop.index is even ? 'lg:ml-1/12' ) }}">

					<div class="row">
						<div class="col-1/5 text-[5.75rem] leading-none font-bold text-red-vivid">
							{{ loop.index }}
						</div>
						<div class="col-4/5">
							<div class="relative before:absolute before:w-1.5 before:h-1.5 before:rounded-full before:bg-red-vivid before:right-full before:mr-2 before:mt-2">
								<h3 class="text-[1.375rem] font-bold">{{ key_figure.title }}</h3>

								<div class="wysiwyg text-sm">{{ key_figure.content }}</div>
							</div>
						</div>
					</div>

				</article>
			{% endfor %}
		</div>
	</div>
</div>
