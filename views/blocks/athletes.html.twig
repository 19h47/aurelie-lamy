{#
 # Blocks: Athletes
 #}

<div class="bg-red-light-grayish space-y-15 lg:space-y-30 py-15 lg:py-30">
	{%- for athlete in get_posts( { post_type: 'athlete', post__in: block.athletes, posts_per_page: -1 } ) -%}
		<div class="container">
			<div class="row">

				<div class="{{
					html_classes(
						'relative z-1 lg:col-6/12',
						loop.index is odd ? 'lg:-ml-0.5/12 lg:order-3 text-white' : 'lg:order-1'
					)
				}}">
					<div class="{{ html_classes( loop.index is odd ? 'bg-red-vivid' : 'bg-white', 'rounded-[1.75rem]' ) }}">

						<div class="row py-15">
							<div class="ml-1/12 col-10/12 lg:col-5/6 lg:ml-0.5/6">
								<div class="wysiwyg">{{- athlete.meta( 'testimonial' ) -}}</div>
							</div>
						</div>
					</div>
				</div>

				<div class="{{
					html_classes(
						'mt-7 lg:mt-24',
						loop.index is odd ? 'lg:order-1 lg:col-5.5/12' : 'lg:order-3 lg:col-4.5/12'
					)
				}}">
					<div class="lg:row">
						<div class="lg:col-5/5.5">
							<h2 class="text-[2.625rem] leading-[2.875rem]">{{- athlete.title -}}</h2>
							<p class="text-2xl mt-2">{{- athlete.meta( 'position' ) -}}</p>
						</div>
					</div>
				</div>

				<div class="{{ html_classes(
					'hidden lg:block mt-30 relative z-2 lg:order-2',
					loop.index is odd ? 'col-2/12 -ml-1/12' : 'col-2/12 -ml-0.5/12'
				) }}">
					<hr class="{{ html_classes( 'bg-gray-very-dark', 'w-full h-[0.0625rem] block border-none' ) }}">
				</div>

			</div>
		</div>
	{%- endfor -%}
</div>
