{#
 # About Page
 #
 # @package WordPress
 # @subpackage AurelieLamy
 #}

{% extends 'index.html.twig' %}

{% block content %}
	<main>

		{% embed 'blocks/blocks.html.twig' with { blocks: post.meta( 'blocks' ), classes: [ 'first-child:mt-0 last-child:mb-0' ] } %}
			{%- block prepend -%}
				<div class="overflow-hidden">
					<div class="container">
						<div class="row">
							<div class="lg:col-5.5/12 lg:-ml-0.5/12 relative z-1 lg:order-3">
								<div class="relative h-[20.25rem] lg:h-full lg:w-[46.6325037vw]">
									{{- include( 'components/image.html.twig', { classes: [ 'h-full', 'w-full', 'absolute', 'inset-y-0', 'left-0', 'object-cover' ], image: post.meta( 'hero' ).image } ) -}}
								</div>
							</div>
							<div class="lg:col-6/12 pt-14 pb-13 lg:pt-15 lg:pb-24 lg:order-1">
								<h1 class="text-[2.875rem] lg:text-[3.5rem] leading-none text-red-vivid">{{- post.meta( 'hero' ).heading -}}</h1>
								<div class="row mt-8">
									<div class="wysiwyg text-[1.375rem] leading-[1.625rem] font-bold lg:col-4.5/6">
										{{- post.meta( 'hero' ).content -}}
									</div>
								</div>
							</div>
							<div class="hidden lg:block col-1.5/12 -ml-0.5/12 mt-50 relative z-2 lg:order-2"><hr class="w-full h-[0.0625rem] bg-red-vivid block border-none"></div>
						</div>
					</div>
				</div>
			{%- endblock -%}
		{%- endembed -%}

	</main>
{% endblock %}
