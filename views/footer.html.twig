 #}

<footer class="{{ html_classes( 'bg-black text-white py-15 lg:py-12', classes | default( [] ) | join( ' ' ) ) }}">
	<div class="container">
		<div class="row">
			<div class="lg:col-6/12">
				<ul class="columns-2 lg:columns-4 text-xs" itemscope itemtype="http://schema.org/SiteNavigationElement">
					{% for item in nav_menus.footer.get_items() %}
						<li class="{{ loop.first ? 'mb-2.5' : loop.last ? 'mt-2.5' : 'my-2.5' }}">

							<a
								href="{{ item.url }}"
								class="{{
									html_classes(
										'hover:text-white', 'focus:text-white', 'transition-colors', 'duration-300', 'whitespace-nowrap',
										item.current ? 'is-active text-white' : 'text-gray-dark',
										item.classes | join( ' ' )
									)
								}}"
								itemprop="url"
								{{ item.is_target_blank or item.is_external ? " target=\"#{item.target}\" rel=\"noopener noreferer\"" }}
							>
								{{- item.title -}}
							</a>

						</li>
					{% endfor %}
				</ul>
			</div>
			<div class="lg:col-6/12 mt-10 lg:mt-0">
				<div class="flex flex-col lg:flex-row lg:justify-end gap-y-10 lg:gap-y-0 lg:gap-x-10 lg:h-full lg:items-start">
					{{- include( 'components/socials.html.twig' ) -}}
					<span class="bg-gray-very-dark h-[0.0625rem] lg:h-full w-full lg:w-[0.0625rem] block"></span>
					<div>
						<img class="" width="262" height="19" src="{{ theme.manifest[ 'img/svg/careformance.svg' ] }}" />
						<a
							class="{{ html_classes( 'mt-10 lg:mt-5', 'inline-flex gap-x-2 items-center group text-sm py-2.5 px-5 border rounded-full border-white text-white hover:border-red-vivid hover:bg-red-vivid transition-colors duration-300' ) }}"
							href="{{ url }}"
							{{ target ? 'rel="noopener noreferer" target="_blank"' : '' }}
						>
							{{- icon( 'chevron-right', { classes: [ 'w-1.5', 'h-2.5', 'fill-red-vivid', 'group-hover:fill-white', 'transition-colors', 'duration-300' ] } ) -}}
							{{- __( 'Discover', 'aurelielamy' ) -}}
						</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</footer>
